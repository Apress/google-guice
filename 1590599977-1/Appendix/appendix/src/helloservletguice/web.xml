<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE web-app
      PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
      "http://java.sun.com/dtd/web-app_2_3.dtd">

<web-app>
    <display-name>Hello Guice</display-name>
    <listener>
        <listener-class>
            helloservletguice.GuiceServletContextListener
        </listener-class>
    </listener>

    <servlet>
        <servlet-name>welcome</servlet-name>
        <servlet-class>helloservletguice.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>welcome</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>
</web-app>

